@echo off

echo ###########################################################################
echo Jekyll: serve.
echo ###########################################################################
echo.

rem ###########################################################################
rem This prevents conflict with timeout in Cygwin, MinGW, etc.
set timeout=%SystemRoot%\System32\timeout.exe
rem ###########################################################################

echo ==========================================================================
echo %~nx0 BEGIN
echo ========================================================================== & echo.

rem Set the current directory to the location of the batch script, using the %0 parameter
pushd "%~dp0"

jekyll serve

%timeout% 10

echo ==========================================================================
echo %~nx0 END
echo ========================================================================== & echo.